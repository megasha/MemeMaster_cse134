{
   "manifest_version": 2,
   "name": "Me&Me's Meme Master Extractor",
   "description": "Saves your favorite online memes to Meme Master.",
   "version": "1.0",
   "icons": { "16" : "img/icon.png",
              "48" : "img/icon.png",
              "128" : "img/icon.png"
            },
  
   "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
   
   "permissions": [
   		"contextMenus"
    ],
   
   "background": {
    "scripts": ["js/background.js"]
   },

   "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "instruction.html"
  }

}
